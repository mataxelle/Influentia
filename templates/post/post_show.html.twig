{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ post.title }}{% endblock %}

{% block body %}
<div>
    <div class="col s12">
		{% for message in app.flashes('message') %}
            <div class="flash-message">
                <P>{{ message }}</p>
            </div>
        {% endfor %}
	</div>

    <h1>{{ post.title }}</h1>

    <div>
        <p>{% for category in post.categories %}
                {{ category.label }}{{ loop.last ? '' : ',' }}
            {% endfor %}
        </p>
        <div>
            {% if post.image %}
                <img src="{{ asset('uploads/' ~ post.image) }}" alt="{{ post.title }}" />
            {% else %}
                <span>Pas d'image</span>
            {% endif %}
            <p>{{ post.content }}</p>
            <p>{{ post.author }}</p>
            <p>Publi√© le {{ post.updateDate|date('d/m/Y') }}</p>
            <span> {{ post.published ? 'Oui' : 'Non' }}</span>
        </div>
    </div>
    <a href="{{ path('post_edit', {'id' : post.id}) }}">Modifier le post</a>
    <a href="{{ path('post_delete', {'id' : post.id}) }}">Supprimer le post</a>
</div>
{% endblock %}