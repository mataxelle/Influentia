{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | {{ post.title }}{% endblock %}

{% block body %}
<div>
    <h1 class="text-center my-5">Modifier "{{ post.title }}"</h1>
	
    <div>
		{% if post.image is not null %}
			<img src="{{ asset('uploads/' ~ post.image) }}">
		{% endif %}
	</div>

    {% include "includes/forms/post_form.html.twig" with {"formButton" : "Modifier"} %}
</div>
{% endblock %}