{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Accueil{% endblock %}

{% block body %}
<div>
    <h1>Tous les articles</h1>

    <a href="{{ path('post_add') }}">Ajouter un post</a>
    <a href="{{ path('prenium') }}">Voir prenium</a>

    <article>
    {% for post in posts %}
        <h2>{{ post.title }}</h2>
        <a href="{{ path('post_show', {'id' : post.id}) }}">par ici</a>
        <span>{{ post.updateDate|date('d/m/Y') }}</span>
    {% endfor %}
    </article>
</div>
{% endblock %}
