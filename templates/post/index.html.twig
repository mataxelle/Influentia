{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Accueil
{% endblock %}

{% block body %}
	<div>
		<h1 class="text-center my-5">Une plateforme d'informations, où le partage est essentiel !</h1>

		<h2 class="text-center text-secondary mb-5">Articles </h2>

		<div class="row row-cols-1 row-cols-md-3 g-4 ">
			{% for post in posts %}
				<div class="col">
					{% if post.published %}
						<div class="card h-100">
							{% include "includes/images/post_images.html.twig" %}
							<div class="card-body">
								<h5 class="card-title">
									<a href="{{ path('post_show', {'id' : post.id}) }}" class="text-decoration-none text-dark">{{ post.title }}</a>
								</h5>
								<p class="card-text">
									<small class="text-muted"><em>Publié le {{ post.updateDate|date('d/m/Y') }}</em></small>
								</p>
							</div>
						</div>
					{% endif %}
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
