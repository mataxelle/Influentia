{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	| Paiement
{% endblock %}

{% block body %}
	<div>
		<h1 class="text-center my-5">Page de paiement</h1>

		{% if preniumPosts | length > 0 %}
			<table class="table table-striped table-hover">
				<thead class="table-info">
					<tr>
						<th scope="col">#</th>
						<th scope="col">Titre</th>
						<th scope="col">Prix</th>
						<th scope="col">Annuler</th>
					</tr>
				</thead>
				<tbody>
					{% set i = 1 %}
					{% for preniumPost in preniumPosts %}
						<tr scope="row">
							<td>{{ i }}</td>
							<td>{{ preniumPost.item.title }}</td>
							<td>{{ preniumPost.item.price }}.00</td>
							<td>
								<a href="{{ path('cart_remove', { 'id' : preniumPost.item.id }) }}" class="btn btn-danger">
									x
								</a>
							</td>
						</tr>
						{% set i = i+1 %}
					{% endfor %}
				</tbody>
				<tfooter>
					<tr>
						<td colspan="2" class="text-end">Total :</td>
						<td>{{ total }}.00</td>
						<td></td>
					</tr>
				</tfooter>
			</table>

			<form action="/checkout_session" method="POST">
				<button type="submit" class="btn btn-success">Checkout</button>
			</form>
			<a href="{{path("cart_delete_all")}}" class="btn btn-danger">Annuler</a>
		{% else %}
			<p class="text-center">Panier vide</p>
		{% endif %}
	</div>
{% endblock %}

{% block javascripts %}
	<script>

		let cancel = document.getElementById('cancel');
	</script>
{% endblock %}
