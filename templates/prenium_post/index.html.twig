{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} | Prenium{% endblock %}

{% block body %}
<div>
    <h1>Tous les articles Prenium !</h1>

    <a href="{{ path('prenium_post_add') }}">Ajouter un post prenium</a>

    <article>
    {% for preniumPost in preniumPosts %}
        {% if preniumPost.published == 1 %}
            <h2>{{ preniumPost.title }}</h2>
            <a href="{{ path('prenium_post_show', {'id' : preniumPost.id}) }}">par ici</a>
        {% endif %}
    {% endfor %}
    </article>
</div>
{% endblock %}
