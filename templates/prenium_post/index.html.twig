{% extends 'base.html.twig' %}

{% block title %}
	{{ parent()}}
	| Prenium
{% endblock %}

{% block body %}
	<div>
		<h1 class="text-center my-5">Prenium</h1>

		<div class="row row-cols-1 row-cols-md-3 g-4">
			{% for preniumPost in preniumPosts %}
				<div class="col">
					{% if preniumPost.published == 1 %}
						<div class="card h-100">
							{% include "includes/images/prenium_images.html.twig" %}
							<div class="card-body d-flex flex-column">
								<h5 class="card-title">
									<a href="{{ path('prenium_post_show', {'id' : preniumPost.id}) }}" class="text-decoration-none text-dark">{{ preniumPost.title }}</a>
								</h5>
								<p class="card-text">
									<small class="text-muted">
										<em>Publié le
											{{ preniumPost.updateDate|date('d/m/Y') }}</em>
									</small>
								</p>
								<div class="m-auto">
									<a class="btn btn-danger" href="{{ path('cart_add', { 'id' : preniumPost.id }) }}">Accédez à l'article pour 1 e</a>
								</div>
							</div>
						</div>
					{% endif %}
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}

{% block javascripts %}
<script>

    let cancel = document.getElementById('cancel');

</script>	
{% endblock %}
