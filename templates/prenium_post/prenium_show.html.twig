{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	|
	{{ preniumPost.title }}
{% endblock %}

{% block body %}
	<div>
		{% include "base/small_prenium_link.html.twig" %}

		<div class="col s12">
			{% for message in app.flashes('message') %}
				<div class="flash-message">
					<P>{{ message }}</p>
				</div>
			{% endfor %}
		</div>

		<div class="row my-5">
			<div class="col ">
				<h1 class="text-center">{{ preniumPost.title }}</h1>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6 offset-md-3 mx-auto">
				<div class="card border-0">
					<div class="">
						<div class="d-flex justify-content-end">
							<span class="text-muted">Publi√© le
								<em>{{ preniumPost.updateDate|date('d/m/Y') }}</em>
							</span>
						</div>
						<p>
							{% for category in preniumPost.categories %}
								{{ category.label }}{{ loop.last ? '' : ',' }}
							{% endfor %}
						</p>
					</div>
					{% include "includes/images/prenium_images.html.twig" %}
					<div class="card-body">
						<p class="card-text">{{ preniumPost.content }}</p>
					</div>
					{% if is_granted('ROLE_ADMIN') %}
						<div class="my-5">
							<a href="{{ path('prenium_post_edit', {'id' : preniumPost.id}) }}" class="btn btn-success">Modifier</a>
							<a href="{{ path('prenium_post_delete', {'id' : preniumPost.id}) }}" class="btn btn-danger">Supprimer</a>
						</div>
					{% endif %}
				</div>

				<div class="border-bottom my-4 pb-4">
					<div class="row">
						<div class="col-3">
							<img class="img-fluid shadow-1-strong rounded" src="{{asset('/assets/images/femme.png')}}" alt="image de femme"/>
						</div>

						<div class="col-9">
							<p class="mb-2">
								<strong>{{ preniumPost.user.firstName}}</strong>
							</p>
							<a href="" class="text-dark">
								<i class="fab fa-facebook-f me-1"></i>
							</a>
							<a href="" class="text-dark">
								<i class="fab fa-twitter me-1"></i>
							</a>
							<a href="" class="text-dark">
								<i class="fab fa-linkedin me-1"></i>
							</a>
							<p>
								Lorem ipsum dolor sit amet consectetur adipisicing elit. Distinctio est ab iure
																inventore dolorum consectetur? Molestiae aperiam atque quasi consequatur aut?
																Repellendus alias dolor ad nam, soluta distinctio quis accusantium!
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
